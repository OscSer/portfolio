{
    "name": "portfolio",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "node -r dotenv/config scripts/create-bundle-dev.js dotenv_config_path=.env",
        "test": "jest --coverage",
        "build": "node -r dotenv/config scripts/create-bundle-prod.js dotenv_config_path=.env",
        "prettier:fix": "prettier --write src",
        "eslint": "eslint src/",
        "eslint:report": "eslint -f json -o report/eslint-report.json src/",
        "eslint:fix": "eslint --fix --ext .ts,.tsx src/",
        "prepare": "husky install",
        "check-dependencies": "ncu",
        "upgrade-dependencies": "ncu --doctor -u",
        "tsc": "tsc",
        "predeploy": "yarn build",
        "deploy": "gh-pages -d public"
    },
    "lint-staged": {
        "src/**/*": "prettier --write --ignore-unknown",
        "src/**/*.{ts,tsx}": [
            "eslint --fix",
            "bash -c eslint",
            "bash -c tsc"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ],
            "@babel/preset-env",
            "@babel/preset-typescript"
        ],
        "env": {
            "test": {
                "plugins": [
                    "@babel/plugin-transform-runtime"
                ]
            }
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@babel/plugin-transform-runtime": "^7.16.8",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@testing-library/dom": "^8.11.2",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/firebase": "^3.2.1",
        "@types/jest": "^27.4.0",
        "@types/lodash": "^4.14.178",
        "@types/node": "^17.0.9",
        "@types/react": "^17.0.38",
        "@types/react-datepicker": "^4.3.4",
        "@types/react-dom": "^17.0.11",
        "@types/react-table": "^7.7.9",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "bootstrap": "5.1.3",
        "chokidar": "^3.5.2",
        "dotenv": "^14.1.0",
        "esbuild": "^0.14.11",
        "esbuild-sass-plugin": "^2.0.3",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest-dom": "^4.0.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-testing-library": "^5.0.3",
        "firebase": "^9.6.3",
        "gh-pages": "^3.2.3",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.4.7",
        "lint-staged": "^12.1.7",
        "live-server": "^1.2.1",
        "npm-check-updates": "^12.1.0",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-bootstrap": "^2.1.1",
        "react-bootstrap-typeahead": "^6.0.0-alpha.6",
        "react-datepicker": "^4.6.0",
        "react-dom": "^17.0.2",
        "react-table": "^7.7.0",
        "react-use": "^17.3.2",
        "sass": "^1.48.0",
        "typescript": "^4.5.4"
    }
}
