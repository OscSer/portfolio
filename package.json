{
    "name": "portfolio",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "node -r dotenv/config scripts/create-bundle-dev.js dotenv_config_path=.env",
        "test": "jest --coverage",
        "build": "node -r dotenv/config scripts/create-bundle-prod.js dotenv_config_path=.env",
        "prettier:fix": "prettier --write src",
        "eslint:report": "eslint --format json --output-file report/eslint-report.json src/",
        "eslint:fix": "eslint --fix --ext .ts,.tsx src/",
        "prepare": "husky install",
        "check-dependencies": "ncu",
        "upgrade-dependencies": "ncu --doctor -u",
        "tsc": "tsc",
        "predeploy": "yarn build",
        "deploy": "gh-pages -d public"
    },
    "lint-staged": {
        "src/**/*": "prettier --write --ignore-unknown",
        "src/**/*.{ts,tsx}": [
            "eslint --fix",
            "bash -c tsc"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ],
            "@babel/preset-env",
            "@babel/preset-typescript"
        ],
        "env": {
            "test": {
                "plugins": [
                    "@babel/plugin-transform-runtime"
                ]
            }
        }
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.15.0",
        "@babel/preset-env": "^7.15.6",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@testing-library/dom": "^8.6.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.1",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.2.1",
        "@types/firebase": "^3.2.1",
        "@types/jest": "^27.0.2",
        "@types/lodash": "^4.14.176",
        "@types/node": "^16.10.1",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "chokidar": "^3.5.2",
        "dotenv": "^10.0.0",
        "esbuild": "^0.13.2",
        "esbuild-sass-plugin": "^1.5.5",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest-dom": "^3.9.2",
        "eslint-plugin-react": "^7.26.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^4.12.4",
        "firebase": "^9.6.3",
        "gh-pages": "^3.2.3",
        "husky": "^7.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.2.2",
        "lint-staged": "^11.1.2",
        "live-server": "^1.2.1",
        "npm-check-updates": "^11.8.5",
        "prettier": "^2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-use": "^17.3.1",
        "sass": "^1.42.1",
        "typescript": "^4.4.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@types/react-table": "^7.7.9",
        "bootstrap": "5.1.3",
        "react-bootstrap": "^2.1.1",
        "react-table": "^7.7.0"
    }
}
